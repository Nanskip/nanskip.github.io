{
    "spacing": {
        "sectionPadding": "2rem",
        "sectionGap": "1rem",
        "elementGap": "1rem",
        "containerPadding": "1rem"
    },
    "colors": {
        "primary": "#00ff00",
        "background": "#000000",
        "terminal": "#001100",
        "text": "#00ff00",
        "accent": "#00aa00",
        "glow": "#00ff00",
        "scanline": "rgba(0, 255, 0, 0.1)",
        "noise": "rgba(0, 255, 0, 0.05)"
    },
    "typography": {
        "fontFamily": "VCR_OSD_MONO, monospace",
        "baseFontSize": "16px",
        "lineHeight": "1.5",
        "headingScale": 1.2
    },
    "layout": {
        "maxWidth": "1200px",
        "containerPadding": "1rem",
        "gridGap": "1rem",
        "borderRadius": "4px",
        "terminalBorder": "2px solid #00ff00"
    },
    "animations": {
        "transitionSpeed": "0.3s",
        "hoverScale": "1.05",
        "glitchIntensity": "0.1",
        "scanlineSpeed": "0.5s",
        "noiseOpacity": "0.05"
    },
    "terminal": {
        "width": "600px",
        "height": "400px",
        "minWidth": "300px",
        "minHeight": "200px",
        "fontSize": "14px",
        "promptColor": "#00ff00",
        "textColor": "#00ff00",
        "backgroundColor": "#001100"
    },
    "effects": {
        "scanlineHeight": "2px",
        "scanlineOpacity": "0.1",
        "noiseOpacity": "0.05",
        "glitchFrequency": "0.1",
        "crtFlicker": true,
        "vhsEffect": true,
        "matrixRain": true
    },
    "gallery": {
        "itemMinWidth": "300px",
        "hoverScale": "1.05",
        "transitionSpeed": "0.3s"
    }
} 